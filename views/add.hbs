<h1>Add new product</h1>

<form action="/add" method="POST">
  <div class="input-field">
    <input id="title" type="text" name="title" class="validate" required />
    <label for="title">Title</label>
    <span class="helper-text" data-error="Add title"></span>
  </div>
  <div class="input-field">
    <input id="price" type="text" name="price" class="validate" required />
    <label for="price">Price</label>
    <span class="helper-text" data-error="Add price"></span>
  </div>
  <div class="inut-field">
    <input id="image" type="text" name="image" class="validate" required />
    <label for="image">Image URL</label>
    <span class="helper-text" data-error="Enter URL image"></span>
  </div>
  <button class="btn btn-primary">Add course</button>
</form>