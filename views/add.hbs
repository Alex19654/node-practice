<h1>Add new product</h1>
{{#if error}}
<p class="alert">{{error}}</p>
{{/if}}

<form action="/add" method="POST" novalidate>
  <div class="input-field">
    <input id="title" type="text" name="title" class="validate" value="{{data.title}}" required />
    <label for="title">Title</label>
    <span class="helper-text" data-error="Add title"></span>
  </div>
  <div class="input-field">
    <input id="price" type="text" name="price" class="validate" value="{{data.price}}" required />
    <label for="price">Price</label>
    <span class="helper-text" data-error="Add price"></span>
  </div>
  <div class="inut-field">
    <input id="image" type="text" name="image" class="validate" value="{{data.image}}" required />
    <label for="image">Image URL</label>
    <span class="helper-text" data-error="Enter URL image"></span>
  </div>
  
  <input type="hidden" name="_csrf" value="{{csrf}}">

  <button class="btn btn-primary">Add course</button>
</form>